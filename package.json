{
  "name": "slidecraft",
  "version": "1.0.0",
  "description": "AI-powered presentation creation application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build complete'",
    "test": "jest",
    "docker:build": "docker build -t slidecraft .",
    "docker:run": "docker run -p 3000:3000 --env-file .env slidecraft",
    "docker:compose": "docker-compose up -d",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:heroku": "git push heroku main"
  },
  "keywords": ["ai", "presentations", "powerpoint", "automation"],
  "author": "SlideCraft Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "openai": "^4.20.1",
    "pptxgenjs": "^3.12.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "natural": "^6.6.2",
    "node-nlp": "^4.27.0",
    "jimp": "^0.22.10",
    "googleapis": "^128.0.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "serverless-http": "^3.2.0"
  }
