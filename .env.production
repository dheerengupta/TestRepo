# Production Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# REQUIRED: Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_secure_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# OPTIONAL: Google Cloud Configuration (for Drive/Slides integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# OPTIONAL: Microsoft Graph API (for OneDrive integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=https://your-domain.com/auth/microsoft/callback

# OPTIONAL: External APIs for enhanced visuals
UNSPLASH_ACCESS_KEY=your_unsplash_api_key
PEXELS_API_KEY=your_pexels_api_key

# OPTIONAL: Database (if using)
# DATABASE_URL=your_database_url

# OPTIONAL: Redis (for caching)
# REDIS_URL=your_redis_url